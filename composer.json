{
  "name": "tastyigniter/ti-ext-drivers",
  "description": "Provides third party drivers for services such as predis, aws, etc",
  "license": "MIT",
  "authors": [
    {
      "name": "Sam Poyigi",
      "email": "sam@sampoyigi.com"
    }
  ],
  "require": {
    "tastyigniter/core": "^v4.0@beta",
    "predis/predis": "~1.0",
    "league/flysystem-aws-s3-v3": "~3.0",
    "wildbit/swiftmailer-postmark": "~3.1"
  },
  "require-dev": {
    "larastan/larastan": "^2.4.0",
    "laravel/pint": "^1.2",
    "pestphp/pest-plugin-laravel": "^2.0",
    "rector/rector": "^1.2",
    "sampoyigi/testbench": "dev-main as 1.0"
  },
  "autoload": {
    "psr-4": {
      "Igniter\\Drivers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igniter\\Drivers\\Tests\\": "tests/"
    }
  },
  "extra": {
    "tastyigniter-extension": {
      "code": "igniter.drivers",
      "name": "Third-party Drivers",
      "icon": {
        "class": "fa fa-screwdriver",
        "color": "#664500",
        "backgroundColor": "#FECC4D"
      },
      "homepage": "https://tastyigniter.com/marketplace/item/igniter-drivers"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest --compact",
    "test-coverage": "vendor/bin/pest --coverage --exactly=100 --compact",
    "type-coverage": "vendor/bin/pest --type-coverage --min=100",
    "format": "vendor/bin/pint",
    "refactor": "vendor/bin/rector process --dry-run",
    "static": "vendor/bin/phpstan analyse --ansi --memory-limit 1056M",
    "test-suite": [
      "@refactor",
      "@static",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true,
      "composer/installers": true
    },
    "sort-packages": true
  },
  "minimum-stability": "beta"
}
